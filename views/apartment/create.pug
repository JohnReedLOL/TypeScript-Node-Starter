    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='septemberPrice') September's rent
      .col-sm-7
        input.form-control(type='septemberPrice', name='septemberPrice', id='septemberPrice', value=apartment.septemberPrice)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='octoberPrice') October's rent
      .col-sm-7
