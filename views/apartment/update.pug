extends ../layout

block content
  .page-header
    h3 #{title}
    hr

  form.form-horizontal(action="/account/edit-listing/" + apartmentNumber, method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='apartmentNumber') Apartment Number
      .col-sm-7
        input.form-control(type='apartmentNumber', name='apartmentNumber', id='apartmentNumber', value=apartment.apartmentNumber)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='numBedrooms') Number of Bedrooms
      .col-sm-7
        input.form-control(type='numBedrooms', name='numBedrooms', id='numBedrooms', value=apartment.numBedrooms)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='numBathrooms') Number of Bathrooms
      .col-sm-7
        input.form-control(type='numBathrooms', name='numBathrooms', id='numBathrooms', value=apartment.numBathrooms)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='photosFolder') Photos Folder (ex. Google Drive Link)
      .col-sm-7
        input.form-control(type='photosFolder', name='photosFolder', id='photosFolder', value=apartment.photosFolder)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='additionalInformation') Additional Information (contact information, additional fees, etc)
      .col-sm-7
        input.form-control(type='additionalInformation', name='additionalInformation', id='additionalInformation', value=apartment.additionalInformation)
    .form-group.row.justify-content-md-center
